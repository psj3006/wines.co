<script>

	function login_go(f) {
		if (f.email.value == "") {
			swal("이메일을 입력해주세요.");
			f.email.focus();
			return;
		} 
		if (f.pw.value == "") {
			swal("비밀번호를 입력해주세요.");
			f.pw.focus();
			return;
		}
		if (f.remember_me.checked) {
			
		}
		f.action = "login.jsp";
		f.submit();
	}

